<?xml version="1.0"?>
<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
        bootstrap="php-tests/_bootstrap.php"
        backupGlobals="false"
        colors="true"
        processIsolation="false"
        stopOnError="false"
        stopOnFailure="false"
        stopOnIncomplete="false"
        stopOnSkipped="false"
        stopOnRisky="false"
        timeoutForSmallTests="1"
        timeoutForMediumTests="10"
        timeoutForLargeTests="60"
        defaultTestSuite="ALL"
        >

    <coverage>
        <report>
            <clover outputFile="php-tests/data/clover.xml"/>
            <text outputFile="php://stdout" showUncoveredFiles="false"/>
        </report>
    </coverage>

    <testsuites>
        <testsuite name="ALL">
            <directory>php-tests/AccessTests</directory>
            <directory>php-tests/ContentTests</directory>
            <directory>php-tests/ConfigsTests</directory>
            <directory>php-tests/GraphicsTests</directory>
            <directory>php-tests/SourcesTests</directory>
            <directory>php-tests/TraitsTests</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">php-src/</directory>
        </include>
    </source>
</phpunit>
